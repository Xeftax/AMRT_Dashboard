<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="125"
    android:toDegrees="125">
    <shape
        android:innerRadiusRatio="5.5"
        android:shape="ring"
        android:thickness="30dp"
        android:useLevel="true"><!-- this line fixes the issue for lollipop api 21 -->

        <gradient
            android:angle="0"
            android:endColor="#CCFF2F2F"
            android:centerColor="#CC444FB6"
            android:startColor="#CC3AC7FF"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>